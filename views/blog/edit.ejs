<%- include('../partials/headerBlog') %>

<div class='ui main container'>
    <div class='ui huge header'>Edit <%= blog.title %></div>
    <form class='ui form' action='/blog/<%= blog._id%>?_method=PUT' method='POST'>
        <div class='field'>
            <label>Blog Title: </label>
            <input type='text' name='blog[title]' value='<%= blog.title %>'>
        </div>
        <div class='field'>
            <label>Blog Author Name: </label>
            <input type='text' name='blog[author]' value='<%= blog.author %>'>
        </div>
        <div class='field'>
            <label>Blog Content: </label>
            <textarea name='blog[body]'><%= blog.body %></textarea>
        </div>
        <button class='ui primary button' type='submit'>
            Submit
        </button>
        <button class='ui button red' type='reset'>
            Reset
        </button>
    </form>
</div>

<%- include('../partials/footerBlog') %>