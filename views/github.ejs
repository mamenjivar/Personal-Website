<%- include('partials/header'); %>

<!-- about page section -->
<div class='container text-center py-3'>
    <i class="fab fa-github fa-10x"></i>
    <h1>Github Repository Page</h1>
    <p>In this page, you will see the various projects in this particular repository</p>
    <a href='/api' class='btn btn-primary'>Go back</a>
    <!-- find combination for buttons to make more sense -->
    <a href='https://github.com/mamenjivar' target="_blank" class='btn btn-primary'>Go to Github Profile <i class="fab fa-github"></i></a>
</div>

<!-- long cards with repos -->
<!-- LOOPS 5 ONLY -->
<div class='container'>
    <div class='row d-flex justify-content-around'>
        <% for(let i = 0; i < 5; i++) { %>
        <div class='col-md-5 pb-3'>
            <div class="card">
                <div class="card-header">
                    Repository <%= i + 1 %> of 5
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= gitData[i].name %></h5>
                    <p class="card-text"><%= gitData[i].description %></p>
                    <a href="<%= gitData[i].html_url %>" target='_blank' class="btn btn-primary">Visit Repository</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer'); %>  